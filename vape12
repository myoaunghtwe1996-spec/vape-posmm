    <script>
        // ====================================
        // FIREBASE CONFIGURATION
        // ====================================
        
        // ‚úÖ Firebase Configuration - READY!
        const firebaseConfig = {
            apiKey: "AIzaSyBloTgt5rE2FMxAH3C3sq3YqK6tMnzgldo",
            authDomain: "vape-pos-myanmar.firebaseapp.com",
            databaseURL: "https://vape-pos-myanmar-default-rtdb.asia-southeast1.firebasedatabase.app",
            projectId: "vape-pos-myanmar",
            storageBucket: "vape-pos-myanmar.firebasestorage.app",
            messagingSenderId: "535582496813",
            appId: "1:535582496813:web:bf3030b940b009a1da00a4"
        };

        // Check if Firebase is configured
        const isFirebaseConfigured = firebaseConfig.apiKey !== "YOUR_API_KEY_HERE";

        let db = null;
        let firebaseConnected = false;

        // Initialize Firebase
        if (isFirebaseConfigured) {
            try {
                firebase.initializeApp(firebaseConfig);
                db = firebase.database();
                
                // Monitor connection
                const connectedRef = db.ref(".info/connected");
                connectedRef.on("value", (snap) => {
                    if (snap.val() === true) {
                        updateFirebaseStatus('connected', '‚òÅÔ∏è Cloud Connected');
                        firebaseConnected = true;
                    } else {
                        updateFirebaseStatus('disconnected', '‚ùå Offline');
                        firebaseConnected = false;
                    }
                });
            } catch (error) {
                console.error("Firebase initialization error:", error);
                updateFirebaseStatus('disconnected', '‚ùå Config Error');
            }
        } else {
            updateFirebaseStatus('disconnected', '‚ö†Ô∏è Not Configured');
        }

        // Update Firebase Status UI
        function updateFirebaseStatus(status, text) {
            const dot = document.getElementById('statusDot');
            const statusText = document.getElementById('statusText');
            
            dot.className = `status-dot ${status}`;
            statusText.textContent = text;
        }

        // ====================================
        // DATA VARIABLES
        // ====================================
        let products = [];
        let cart = [];
        let sales = [];
        let auditLog = [];
        let currentPayment = 'cash';
        let currentDiscount = { type: 'percent', value: 0 };
        let editingProductId = null;
        let currentUser = null;
        let lastReceiptData = null;

        // User Authentication
        const users = [
            { id: 'admin', pin: '1234', name: 'Admin', role: 'admin' },
            { id: 'staff1', pin: '1111', name: 'Staff 1', role: 'staff' },
            { id: 'staff2', pin: '2222', name: 'Staff 2', role: 'staff' }
        ];

        // ====================================
        // FIREBASE SYNC FUNCTIONS
        // ====================================

        // Sync Products to Firebase
        function syncProductsToFirebase() {
            if (!firebaseConnected || !db) return;
            
            updateFirebaseStatus('syncing', '‚ö° Syncing...');
            db.ref('products').set(products)
                .then(() => {
                    updateFirebaseStatus('connected', '‚òÅÔ∏è Cloud Connected');
                })
                .catch((error) => {
                    console.error("Error syncing products:", error);
                });
        }

        // Sync Sales to Firebase
        function syncSalesToFirebase() {
            if (!firebaseConnected || !db) return;
            
            updateFirebaseStatus('syncing', '‚ö° Syncing...');
            db.ref('sales').set(sales)
                .then(() => {
                    updateFirebaseStatus('connected', '‚òÅÔ∏è Cloud Connected');
                })
                .catch((error) => {
                    console.error("Error syncing sales:", error);
                });
        }

        // Sync Audit Log to Firebase
        function syncAuditToFirebase() {
            if (!firebaseConnected || !db) return;
            
            db.ref('auditLog').set(auditLog)
                .catch((error) => {
                    console.error("Error syncing audit:", error);
                });
        }

        // Load Products from Firebase
        function loadProductsFromFirebase() {
            if (!db) return;
            
            db.ref('products').on('value', (snapshot) => {
                const data = snapshot.val();
                if (data) {
                    products = data;
                    renderProducts();
                    renderInventory();
                }
            });
        }

        // Load Sales from Firebase
        function loadSalesFromFirebase() {
            if (!db) return;
            
            db.ref('sales').on('value', (snapshot) => {
                const data = snapshot.val();
                if (data) {
                    sales = data;
                    renderHistory();
                    updateHeaderStats();
                }
            });
        }

        // Load Audit Log from Firebase
        function loadAuditFromFirebase() {
            if (!db) return;
            
            db.ref('auditLog').on('value', (snapshot) => {
                const data = snapshot.val();
                if (data) {
                    auditLog = data;
                    renderAuditLog();
                }
            });
        }

        // ====================================
        // AUTHENTICATION
        // ====================================

        function login(event) {
            event.preventDefault();
            const userId = document.getElementById('loginId').value;
            const pin = document.getElementById('loginPin').value;
            
            const user = users.find(u => u.id === userId && u.pin === pin);
            
            if (user) {
                currentUser = user;
                document.getElementById('loginScreen').style.display = 'none';
                document.getElementById('mainApp').style.display = 'block';
                document.getElementById('currentUser').textContent = user.name;
                
                addAuditLog('LOGIN', `User ${user.name} logged in`);
                init();
            } else {
                alert('‚ùå ID ·Äû·Ä≠·ÄØ·Ä∑·Äô·Äü·ÄØ·Äê·Ä∫ PIN ·Äô·Äæ·Ä¨·Ä∏·Äö·ÄΩ·ÄÑ·Ä∫·Ä∏·Äî·Ä±·Äï·Ä´·Äû·Ää·Ä∫!');
            }
        }

        function logout() {
            if (confirm('Logout ·Äú·ÄØ·Äï·Ä∫·Äô·Äæ·Ä¨ ·Äû·Ä±·ÄÅ·Äª·Ä¨·Äï·Ä´·Äû·Äú·Ä¨·Ä∏?')) {
                addAuditLog('LOGOUT', `User ${currentUser.name} logged out`);
                currentUser = null;
                cart = [];
                document.getElementById('loginScreen').style.display = 'flex';
                document.getElementById('mainApp').style.display = 'none';
                document.getElementById('loginId').value = '';
                document.getElementById('loginPin').value = '';
            }
        }

        // Add Audit Log
        function addAuditLog(action, details, data = null) {
            const log = {
                id: Date.now(),
                timestamp: new Date().toISOString(),
                user: currentUser ? currentUser.name : 'System',
                userId: currentUser ? currentUser.id : 'system',
                action: action,
                details: details,
                data: data
            };
            auditLog.push(log);
            syncAuditToFirebase();
        }

        // ====================================
        // INITIALIZATION
        // ====================================

        function init() {
            if (isFirebaseConfigured) {
                // Load from Firebase (real-time sync)
                loadProductsFromFirebase();
                loadSalesFromFirebase();
                loadAuditFromFirebase();
            } else {
                // Fallback to LocalStorage
                loadDataFromLocalStorage();
            }
            
            renderProducts();
            renderInventory();
            renderHistory();
            renderAuditLog();
            updateCart();
            updateHeaderStats();
            
            // Set default dates for reports
            const today = new Date();
            const firstDay = new Date(today.getFullYear(), today.getMonth(), 1);
            document.getElementById('reportFromDate').valueAsDate = firstDay;
            document.getElementById('reportToDate').valueAsDate = today;
            filterReports();

            // Show audit tab only for admin
            if (currentUser && currentUser.role === 'admin') {
                document.getElementById('auditTab').style.display = 'block';
            } else {
                document.getElementById('auditTab').style.display = 'none';
            }
        }

        // Load from LocalStorage (fallback)
        function loadDataFromLocalStorage() {
            const savedProducts = localStorage.getItem('vape_products_firebase');
            const savedSales = localStorage.getItem('vape_sales_firebase');
            const savedAudit = localStorage.getItem('vape_audit_firebase');
            
            if (savedProducts) {
                products = JSON.parse(savedProducts);
            } else {
                // Default products
                products = [
                    { id: 1, barcode: '8901234567890', name: 'RELX Infinity', category: 'Device', brand: 'RELX', price: 45000, stock: 15, cost: 35000 },
                    { id: 2, barcode: '8901234567891', name: 'RELX Pod Classic Tobacco', category: 'Pod', brand: 'RELX', price: 18000, stock: 50, cost: 14000 },
                    { id: 3, barcode: '8901234567892', name: 'RELX Pod Mint', category: 'Pod', brand: 'RELX', price: 18000, stock: 45, cost: 14000 },
                    { id: 4, barcode: '8901234567893', name: 'IQOS ILUMA Prime', category: 'Device', brand: 'IQOS', price: 180000, stock: 8, cost: 150000 },
                    { id: 5, barcode: '8901234567894', name: 'TEREA Heets Amber', category: 'Heets', brand: 'IQOS', price: 25000, stock: 60, cost: 20000 },
                    { id: 6, barcode: '8901234567895', name: 'VUSE ePod 2', category: 'Device', brand: 'VUSE', price: 38000, stock: 12, cost: 30000 }
                ];
                saveDataToLocalStorage();
                
                // Also sync to Firebase if configured
                if (isFirebaseConfigured) {
                    syncProductsToFirebase();
                }
            }
            
            if (savedSales) {
                sales = JSON.parse(savedSales);
            }
            
            if (savedAudit) {
                auditLog = JSON.parse(savedAudit);
            }
        }

        // Save to LocalStorage (fallback)
        function saveDataToLocalStorage() {
            localStorage.setItem('vape_products_firebase', JSON.stringify(products));
            localStorage.setItem('vape_sales_firebase', JSON.stringify(sales));
            localStorage.setItem('vape_audit_firebase', JSON.stringify(auditLog));
        }

        // ====================================
        // PRODUCT FUNCTIONS
        // ====================================

        function renderProducts() {
            const grid = document.getElementById('productGrid');
            grid.innerHTML = products.map(p => `
                <div class="product-card" onclick="addToCart(${p.id})">
                    <div class="product-actions" onclick="event.stopPropagation()">
                        <button class="action-btn" onclick="editProduct(${p.id})" title="·Äï·Äº·ÄÑ·Ä∫·ÄÜ·ÄÑ·Ä∫·Äõ·Äî·Ä∫">‚úèÔ∏è</button>
                        <button class="action-btn" onclick="deleteProduct(${p.id})" title="·Äñ·Äª·ÄÄ·Ä∫·Äõ·Äî·Ä∫">üóëÔ∏è</button>
                    </div>
                    <div class="product-name">${p.name}</div>
                    <div class="product-info">${p.category} ‚Ä¢ ${p.brand}</div>
                    <div class="product-info">Barcode: ${p.barcode}</div>
                    <div class="product-price">${formatMoney(p.price)}</div>
                    <span class="product-stock">
                        ${p.stock > 10 ? '‚úÖ' : p.stock > 0 ? '‚ö†Ô∏è' : '‚ùå'} 
                        ·Äú·ÄÄ·Ä∫·ÄÄ·Äª·Äî·Ä∫: ${p.stock}
                    </span>
                </div>
            `).join('');
        }

        function addToCart(productId) {
            const product = products.find(p => p.id === productId);
            if (!product || product.stock === 0) {
                alert('·Äï·ÄÖ·Äπ·ÄÖ·Ää·Ä∫·Ä∏·ÄÄ·ÄØ·Äî·Ä∫·Äû·ÄΩ·Ä¨·Ä∏·Äï·Ä´·Äï·Äº·ÄÆ!');
                return;
            }

            const existing = cart.find(item => item.id === productId);
            if (existing) {
                if (existing.qty < product.stock) {
                    existing.qty++;
                } else {
                    alert('·Äú·ÄÄ·Ä∫·ÄÄ·Äª·Äî·Ä∫·Äï·ÄÖ·Äπ·ÄÖ·Ää·Ä∫·Ä∏ ·Äô·Äú·Ä±·Ä¨·ÄÄ·Ä∫·Äï·Ä´!');
                    return;
                }
            } else {
                cart.push({ ...product, qty: 1 });
            }
            
            addAuditLog('ADD_TO_CART', `Added ${product.name} to cart`, { productId, qty: 1 });
            updateCart();
        }

        function updateCart() {
            const cartDiv = document.getElementById('cartItems');
            
            if (cart.length === 0) {
                cartDiv.innerHTML = `
                    <div class="cart-empty">
                        <div class="cart-empty-icon">üõí</div>
                        <div>·ÄÖ·Äª·Ä±·Ä∏·ÄÅ·Äº·ÄÑ·Ä∫·Ä∏·Äê·Ä±·Ä¨·ÄÑ·Ä∫·Ä∏ ·Äó·Äú·Ä¨·Äñ·Äº·ÄÖ·Ä∫·Äî·Ä±·Äï·Ä´·Äû·Ää·Ä∫</div>
                    </div>
                `;
                document.getElementById('subtotal').textContent = '0 MMK';
                document.getElementById('discount').textContent = '- 0 MMK';
                document.getElementById('total').textContent = '0 MMK';
                return;
            }

            cartDiv.innerHTML = cart.map(item => `
                <div class="cart-item">
                    <div class="cart-item-info">
                        <div class="cart-item-name">${item.name}</div>
                        <div class="cart-item-price">${formatMoney(item.price)} √ó ${item.qty}</div>
                    </div>
                    <div class="cart-item-controls">
                        <div class="qty-control">
                            <button class="qty-btn" onclick="updateQty(${item.id}, -1)">-</button>
                            <span class="qty-display">${item.qty}</span>
                            <button class="qty-btn" onclick="updateQty(${item.id}, 1)">+</button>
                        </div>
                        <button class="remove-btn" onclick="removeFromCart(${item.id})">üóëÔ∏è</button>
                    </div>
                </div>
            `).join('');

            const subtotal = cart.reduce((sum, item) => sum + (item.price * item.qty), 0);
            let discountAmount = 0;
            
            const discountValue = parseFloat(document.getElementById('discountInput').value) || 0;
            if (currentDiscount.type === 'percent') {
                discountAmount = subtotal * (discountValue / 100);
            } else {
                discountAmount = discountValue;
            }

            const total = Math.max(0, subtotal - discountAmount);

            document.getElementById('subtotal').textContent = formatMoney(subtotal);
            document.getElementById('discount').textContent = '- ' + formatMoney(discountAmount);
            document.getElementById('total').textContent = formatMoney(total);
        }

        function updateQty(productId, change) {
            const item = cart.find(i => i.id === productId);
            const product = products.find(p => p.id === productId);
            
            if (item) {
                const newQty = item.qty + change;
                if (newQty > 0 && newQty <= product.stock) {
                    item.qty = newQty;
                    addAuditLog('UPDATE_CART_QTY', `Updated ${product.name} quantity to ${newQty}`, { productId, oldQty: item.qty - change, newQty });
                    updateCart();
                } else if (newQty > product.stock) {
                    alert('·Äú·ÄÄ·Ä∫·ÄÄ·Äª·Äî·Ä∫·Äï·ÄÖ·Äπ·ÄÖ·Ää·Ä∫·Ä∏ ·Äô·Äú·Ä±·Ä¨·ÄÄ·Ä∫·Äï·Ä´!');
                }
            }
        }

        function removeFromCart(productId) {
            const item = cart.find(i => i.id === productId);
            if (item) {
                addAuditLog('REMOVE_FROM_CART', `Removed ${item.name} from cart`, { productId });
            }
            cart = cart.filter(item => item.id !== productId);
            updateCart();
        }

        function clearCart() {
            if (cart.length > 0 && confirm('·ÄÖ·Äª·Ä±·Ä∏·ÄÅ·Äº·ÄÑ·Ä∫·Ä∏·Äê·Ä±·Ä¨·ÄÑ·Ä∫·Ä∏·ÄÄ·Ä≠·ÄØ ·Äõ·Äæ·ÄÑ·Ä∫·Ä∏·Äú·ÄÑ·Ä∫·Ä∏·Äô·Äæ·Ä¨ ·Äû·Ä±·ÄÅ·Äª·Ä¨·Äï·Ä´·Äû·Äú·Ä¨·Ä∏?')) {
                addAuditLog('CLEAR_CART', 'Cart cleared', { items: cart.length });
                cart = [];
                updateCart();
            }
        }

        function setDiscountType(type) {
            currentDiscount.type = type;
            document.querySelectorAll('.discount-option').forEach(opt => {
                opt.classList.remove('active');
            });
            event.target.classList.add('active');
            updateCart();
        }

        function selectPayment(method) {
            currentPayment = method;
            document.querySelectorAll('.payment-btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');
        }

        function checkout() {
            if (cart.length === 0) {
                alert('·ÄÄ·Äª·Ä±·Ä∏·Äá·Ä∞·Ä∏·Äï·Äº·ÄØ·Åç ·Äï·ÄÖ·Äπ·ÄÖ·Ää·Ä∫·Ä∏·Äô·Äª·Ä¨·Ä∏ ·Äõ·ÄΩ·Ä±·Ä∏·ÄÅ·Äª·Äö·Ä∫·Äï·Ä´!');
                return;
            }

            const customerName = document.getElementById('customerName').value || 'Guest';
            const subtotal = cart.reduce((sum, item) => sum + (item.price * item.qty), 0);
            const discountValue = parseFloat(document.getElementById('discountInput').value) || 0;
            
            let discountAmount = 0;
            if (currentDiscount.type === 'percent') {
                discountAmount = subtotal * (discountValue / 100);
            } else {
                discountAmount = discountValue;
            }

            const total = Math.max(0, subtotal - discountAmount);
            const invoiceNo = 'INV-' + Date.now();

            const sale = {
                invoiceNo,
                date: new Date().toISOString(),
                customer: customerName,
                cashier: currentUser.name,
                cashierId: currentUser.id,
                items: cart.map(item => ({
                    id: item.id,
                    name: item.name,
                    price: item.price,
                    qty: item.qty
                })),
                subtotal,
                discountType: currentDiscount.type,
                discountValue,
                discount: discountAmount,
                total,
                payment: currentPayment
            };

            // Update stock
            cart.forEach(item => {
                const product = products.find(p => p.id === item.id);
                if (product) {
                    product.stock -= item.qty;
                }
            });

            sales.push(sale);
            
            addAuditLog('SALE_COMPLETED', `Sale ${invoiceNo} completed`, {
                invoiceNo,
                total,
                items: cart.length,
                customer: customerName,
                payment: currentPayment
            });

            // Sync to Firebase
            if (isFirebaseConfigured) {
                syncProductsToFirebase();
                syncSalesToFirebase();
            } else {
                saveDataToLocalStorage();
            }

            lastReceiptData = sale;
            showReceipt(sale);

            // Clear cart
            cart = [];
            document.getElementById('customerName').value = '';
            document.getElementById('discountInput').value = '0';
            currentPayment = 'cash';
            
            document.querySelectorAll('.payment-btn').forEach((btn, idx) => {
                btn.classList.toggle('active', idx === 0);
            });

            updateCart();
            updateHeaderStats();
            renderProducts();
        }

        function showReceipt(sale) {
            const receiptContent = document.getElementById('receiptContent');
            receiptContent.innerHTML = `
                <div class="receipt">
                    <div class="receipt-header">
                        <div class="receipt-title">üå¨Ô∏è VAPE SHOP POS</div>
                        <div>‚òÅÔ∏è Cloud Sync Enabled</div>
                        <div>Invoice: ${sale.invoiceNo}</div>
                        <div>${new Date(sale.date).toLocaleString('en-GB')}</div>
                        <div>Cashier: ${sale.cashier}</div>
                        <div>Customer: ${sale.customer}</div>
                    </div>
                    
                    <div class="receipt-items">
                        ${sale.items.map(item => `
                            <div class="receipt-item">
                                <div>
                                    <div><strong>${item.name}</strong></div>
                                    <div>${formatMoney(item.price)} √ó ${item.qty}</div>
                                </div>
                                <div><strong>${formatMoney(item.price * item.qty)}</strong></div>
                            </div>
                        `).join('')}
                    </div>

                    <div class="receipt-divider"></div>

                    <div class="receipt-item">
                        <div>Subtotal:</div>
                        <div>${formatMoney(sale.subtotal)}</div>
                    </div>
                    ${sale.discount > 0 ? `
                    <div class="receipt-item">
                        <div>Discount (${sale.discountType === 'percent' ? sale.discountValue + '%' : formatMoney(sale.discountValue)}):</div>
                        <div>- ${formatMoney(sale.discount)}</div>
                    </div>
                    ` : ''}
                    
                    <div class="receipt-divider"></div>

                    <div class="receipt-item receipt-total">
                        <div>TOTAL:</div>
                        <div>${formatMoney(sale.total)}</div>
                    </div>

                    <div class="receipt-item">
                        <div>Payment:</div>
                        <div>${getPaymentMethodName(sale.payment)}</div>
                    </div>

                    <div class="receipt-footer">
                        <div>·ÄÄ·Äª·Ä±·Ä∏·Äá·Ä∞·Ä∏·Äê·ÄÑ·Ä∫·Äï·Ä´·Äû·Ää·Ä∫!</div>
                        <div>Thank You!</div>
                        <div style="margin-top: 10px;">Powered by Firebase</div>
                    </div>
                </div>
            `;
            
            document.getElementById('receiptModal').classList.add('active');
        }

        function closeReceiptModal() {
            document.getElementById('receiptModal').classList.remove('active');
        }

        function printReceipt() {
            window.print();
        }

        // Product Management Functions
        function openAddProductModal() {
            editingProductId = null;
            document.getElementById('productModalTitle').textContent = '·Äï·ÄÖ·Äπ·ÄÖ·Ää·Ä∫·Ä∏·Ä°·Äû·ÄÖ·Ä∫·Äë·Ää·Ä∑·Ä∫·Äõ·Äî·Ä∫';
            document.getElementById('productBarcode').value = '';
            document.getElementById('productName').value = '';
            document.getElementById('productCategory').value = '';
            document.getElementById('productBrand').value = '';
            document.getElementById('productPrice').value = '';
            document.getElementById('productStock').value = '';
            document.getElementById('productCost').value = '';
            document.getElementById('productModal').classList.add('active');
        }

        function editProduct(productId) {
            const product = products.find(p => p.id === productId);
            if (!product) return;

            editingProductId = productId;
            document.getElementById('productModalTitle').textContent = '·Äï·ÄÖ·Äπ·ÄÖ·Ää·Ä∫·Ä∏·Äï·Äº·ÄÑ·Ä∫·ÄÜ·ÄÑ·Ä∫·Äõ·Äî·Ä∫';
            document.getElementById('productBarcode').value = product.barcode;
            document.getElementById('productName').value = product.name;
            document.getElementById('productCategory').value = product.category;
            document.getElementById('productBrand').value = product.brand;
            document.getElementById('productPrice').value = product.price;
            document.getElementById('productStock').value = product.stock;
            document.getElementById('productCost').value = product.cost || '';
            document.getElementById('productModal').classList.add('active');
        }

        function deleteProduct(productId) {
            const product = products.find(p => p.id === productId);
            if (confirm('·Ä§·Äï·ÄÖ·Äπ·ÄÖ·Ää·Ä∫·Ä∏·ÄÄ·Ä≠·ÄØ ·Äñ·Äª·ÄÄ·Ä∫·Äô·Äæ·Ä¨ ·Äû·Ä±·ÄÅ·Äª·Ä¨·Äï·Ä´·Äû·Äú·Ä¨·Ä∏?')) {
                products = products.filter(p => p.id !== productId);
                addAuditLog('DELETE_PRODUCT', `Deleted product: ${product.name}`, { productId, product });
                
                if (isFirebaseConfigured) {
                    syncProductsToFirebase();
                } else {
                    saveDataToLocalStorage();
                }
                
                renderProducts();
                renderInventory();
            }
        }

        function saveProduct(event) {
            event.preventDefault();

            const productData = {
                barcode: document.getElementById('productBarcode').value,
                name: document.getElementById('productName').value,
                category: document.getElementById('productCategory').value,
                brand: document.getElementById('productBrand').value,
                price: parseFloat(document.getElementById('productPrice').value),
                stock: parseInt(document.getElementById('productStock').value),
                cost: parseFloat(document.getElementById('productCost').value) || 0
            };

            if (editingProductId) {
                const product = products.find(p => p.id === editingProductId);
                const oldData = {...product};
                Object.assign(product, productData);
                addAuditLog('UPDATE_PRODUCT', `Updated product: ${productData.name}`, { productId: editingProductId, oldData, newData: productData });
            } else {
                const newId = products.length > 0 ? Math.max(...products.map(p => p.id)) + 1 : 1;
                products.push({ id: newId, ...productData });
                addAuditLog('ADD_PRODUCT', `Added new product: ${productData.name}`, { productId: newId, productData });
            }

            if (isFirebaseConfigured) {
                syncProductsToFirebase();
            } else {
                saveDataToLocalStorage();
            }
            
            renderProducts();
            renderInventory();
            closeProductModal();
        }

        function closeProductModal() {
            document.getElementById('productModal').classList.remove('active');
        }

        // Barcode Scanner Functions
        function openBarcodeScanner() {
            document.getElementById('scannerModal').classList.add('active');
            document.getElementById('manualBarcodeInput').value = '';
            startBarcodeScanner();
        }

        function closeBarcodeScanner() {
            document.getElementById('scannerModal').classList.remove('active');
            stopBarcodeScanner();
        }

        let scannerActive = false;
        function startBarcodeScanner() {
            if (scannerActive) return;
            
            scannerActive = true;
            Quagga.init({
                inputStream: {
                    name: "Live",
                    type: "LiveStream",
                    target: document.querySelector('#barcodeScanner'),
                    constraints: {
                        facingMode: "environment"
                    }
                },
                decoder: {
                    readers: ["ean_reader", "ean_8_reader", "code_128_reader", "code_39_reader", "upc_reader"]
                }
            }, function(err) {
                if (err) {
                    console.error(err);
                    alert('·ÄÄ·ÄÑ·Ä∫·Äô·Äõ·Ä¨ ·Äñ·ÄΩ·ÄÑ·Ä∑·Ä∫·Åç·Äô·Äõ·Äï·Ä´·Åã Manual barcode input ·ÄÄ·Ä≠·ÄØ ·Ä°·Äû·ÄØ·Ä∂·Ä∏·Äï·Äº·ÄØ·Äï·Ä´·Åã');
                    return;
                }
                Quagga.start();
            });

            Quagga.onDetected(function(result) {
                const code = result.codeResult.code;
                processBarcodeSearch(code);
                closeBarcodeScanner();
            });
        }

        function stopBarcodeScanner() {
            if (scannerActive) {
                Quagga.stop();
                scannerActive = false;
            }
        }

        function manualBarcodeSearch() {
            const barcode = document.getElementById('manualBarcodeInput').value.trim();
            if (barcode) {
                processBarcodeSearch(barcode);
                closeBarcodeScanner();
            }
        }

        function processBarcodeSearch(barcode) {
            const product = products.find(p => p.barcode === barcode);
            if (product) {
                addToCart(product.id);
                alert(`‚úÖ ${product.name} ·ÄÄ·Ä≠·ÄØ ·ÄÖ·Äª·Ä±·Ä∏·ÄÅ·Äº·ÄÑ·Ä∫·Ä∏·Äê·Ä±·Ä¨·ÄÑ·Ä∫·Ä∏·Äë·Ä≤·Äû·Ä≠·ÄØ·Ä∑ ·Äë·Ää·Ä∑·Ä∫·Äï·Äº·ÄÆ·Ä∏·Äï·Ä´·Äï·Äº·ÄÆ!`);
            } else {
                if (confirm(`Barcode: ${barcode} ·Äû·Ää·Ä∫ ·Äô·Äõ·Äæ·Ä≠·Äï·Ä´·Åã ·Äï·ÄÖ·Äπ·ÄÖ·Ää·Ä∫·Ä∏·Ä°·Äû·ÄÖ·Ä∫·Äë·Ää·Ä∑·Ä∫·Äô·Äú·Ä¨·Ä∏?`)) {
                    openAddProductModal();
                    document.getElementById('productBarcode').value = barcode;
                }
            }
        }

        // Render Functions
        function renderInventory() {
            const list = document.getElementById('inventoryList');
            list.innerHTML = `
                <table class="inventory-table">
                    <thead>
                        <tr>
                            <th>Barcode</th>
                            <th>·Äï·ÄÖ·Äπ·ÄÖ·Ää·Ä∫·Ä∏·Ä°·Äô·Ää·Ä∫</th>
                            <th>·Ä°·Äô·Äª·Ä≠·ÄØ·Ä∏·Ä°·ÄÖ·Ä¨·Ä∏</th>
                            <th>Brand</th>
                            <th>·Äà·Ä±·Ä∏·Äî·Äæ·ÄØ·Äî·Ä∫·Ä∏</th>
                            <th>·Äù·Äö·Ä∫·Äà·Ä±·Ä∏</th>
                            <th>·Äú·ÄÄ·Ä∫·ÄÄ·Äª·Äî·Ä∫</th>
                            <th>·Äú·ÄØ·Äï·Ä∫·ÄÜ·Ä±·Ä¨·ÄÑ·Ä∫·ÄÅ·Äª·ÄÄ·Ä∫</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${products.map(p => `
                            <tr>
                                <td><strong>${p.barcode}</strong></td>
                                <td>${p.name}</td>
                                <td>${p.category}</td>
                                <td>${p.brand}</td>
                                <td>${formatMoney(p.price)}</td>
                                <td>${p.cost ? formatMoney(p.cost) : '-'}</td>
                                <td>
                                    <span class="badge ${p.stock > 10 ? 'badge-success' : p.stock > 0 ? 'badge-warning' : 'badge-danger'}">
                                        ${p.stock}
                                    </span>
                                </td>
                                <td>
                                    <button class="btn btn-secondary" style="padding: 8px 16px; font-size: 13px;" onclick="editProduct(${p.id})">
                                        ‚úèÔ∏è ·Äï·Äº·ÄÑ·Ä∫·ÄÜ·ÄÑ·Ä∫·Äõ·Äî·Ä∫
                                    </button>
                                </td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            `;
        }

        function renderHistory() {
            const list = document.getElementById('historyList');
            const sortedSales = [...sales].reverse();
            
            list.innerHTML = `
                <table class="history-table">
                    <thead>
                        <tr>
                            <th>Invoice</th>
                            <th>Date</th>
                            <th>Cashier</th>
                            <th>Customer</th>
                            <th>Items</th>
                            <th>Subtotal</th>
                            <th>Discount</th>
                            <th>Total</th>
                            <th>Payment</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${sortedSales.map(s => `
                            <tr>
                                <td><strong>${s.invoiceNo}</strong></td>
                                <td>${new Date(s.date).toLocaleString('en-GB', {
                                    day: '2-digit',
                                    month: '2-digit',
                                    year: 'numeric',
                                    hour: '2-digit',
                                    minute: '2-digit'
                                })}</td>
                                <td>${s.cashier || 'Unknown'}</td>
                                <td>${s.customer}</td>
                                <td>${s.items.reduce((sum, item) => sum + item.qty, 0)} items</td>
                                <td>${formatMoney(s.subtotal)}</td>
                                <td style="color: #ff4757;">
                                    ${s.discount > 0 ? '- ' + formatMoney(s.discount) : '-'}
                                </td>
                                <td><strong>${formatMoney(s.total)}</strong></td>
                                <td><span class="badge badge-success">${getPaymentMethodName(s.payment)}</span></td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            `;
        }

        function renderAuditLog() {
            const list = document.getElementById('auditList');
            const sortedLog = [...auditLog].reverse();
            
            list.innerHTML = `
                <table class="history-table">
                    <thead>
                        <tr>
                            <th>Timestamp</th>
                            <th>User</th>
                            <th>Action</th>
                            <th>Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${sortedLog.map(log => `
                            <tr>
                                <td>${new Date(log.timestamp).toLocaleString('en-GB', {
                                    day: '2-digit',
                                    month: '2-digit',
                                    year: 'numeric',
                                    hour: '2-digit',
                                    minute: '2-digit',
                                    second: '2-digit'
                                })}</td>
                                <td><strong>${log.user}</strong> (${log.userId})</td>
                                <td><span class="badge badge-success">${log.action}</span></td>
                                <td>${log.details}</td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            `;
        }

        // Tab Switching
        function switchTab(tab) {
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
            
            document.getElementById(tab + 'Tab').classList.add('active');
            document.getElementById(tab + 'Content').classList.add('active');
            
            if (tab === 'inventory') renderInventory();
            if (tab === 'history') renderHistory();
            if (tab === 'reports') filterReports();
            if (tab === 'audit') renderAuditLog();

            addAuditLog('NAVIGATION', `Switched to ${tab} tab`);
        }

        // Report Functions
        function filterReports() {
            const fromDate = new Date(document.getElementById('reportFromDate').value);
            const toDate = new Date(document.getElementById('reportToDate').value);
            toDate.setHours(23, 59, 59);

            const filteredSales = sales.filter(s => {
                const saleDate = new Date(s.date);
                return saleDate >= fromDate && saleDate <= toDate;
            });

            const totalSales = filteredSales.reduce((sum, s) => sum + s.total, 0);
            const totalDiscount = filteredSales.reduce((sum, s) => sum + s.discount, 0);
            const avgSale = filteredSales.length > 0 ? totalSales / filteredSales.length : 0;

            document.getElementById('reportTotalSales').textContent = formatMoney(totalSales);
            document.getElementById('reportTotalTrans').textContent = filteredSales.length;
            document.getElementById('reportAvgSale').textContent = formatMoney(avgSale);
            document.getElementById('reportTotalDiscount').textContent = formatMoney(totalDiscount);

            const details = document.getElementById('reportDetails');
            details.innerHTML = `
                <h3 style="margin-top: 30px; margin-bottom: 15px;">Sales Breakdown</h3>
                <table class="history-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Transactions</th>
                            <th>Total Sales</th>
                            <th>Avg Sale</th>
                        </tr>
                    </thead>
                    <tbody>
                        ${groupSalesByDate(filteredSales).map(day => `
                            <tr>
                                <td><strong>${day.date}</strong></td>
                                <td>${day.count}</td>
                                <td><strong>${formatMoney(day.total)}</strong></td>
                                <td>${formatMoney(day.average)}</td>
                            </tr>
                        `).join('')}
                    </tbody>
                </table>
            `;
        }

        function groupSalesByDate(salesList) {
            const grouped = {};
            
            salesList.forEach(sale => {
                const date = new Date(sale.date).toLocaleDateString('en-GB');
                if (!grouped[date]) {
                    grouped[date] = { date, count: 0, total: 0 };
                }
                grouped[date].count++;
                grouped[date].total += sale.total;
            });

            return Object.values(grouped).map(day => ({
                ...day,
                average: day.total / day.count
            })).sort((a, b) => new Date(b.date.split('/').reverse()) - new Date(a.date.split('/').reverse()));
        }

        // Export Functions
        function exportHistoryToExcel() {
            const data = sales.map(s => ({
                'Invoice': s.invoiceNo,
                'Date': new Date(s.date).toLocaleString('en-GB'),
                'Cashier': s.cashier || 'Unknown',
                'Customer': s.customer,
                'Items': s.items.map(i => `${i.name} (${i.qty})`).join(', '),
                'Subtotal': s.subtotal,
                'Discount': s.discount,
                'Total': s.total,
                'Payment': getPaymentMethodName(s.payment)
            }));

            const ws = XLSX.utils.json_to_sheet(data);
            const wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, 'Sales History');
            
            XLSX.writeFile(wb, `Sales_History_${new Date().toISOString().slice(0,10)}.xlsx`);
            addAuditLog('EXPORT', 'Exported sales history to Excel');
        }

        function exportReportToExcel() {
            const fromDate = document.getElementById('reportFromDate').value;
            const toDate = document.getElementById('reportToDate').value;
            
            const filteredSales = sales.filter(s => {
                const saleDate = new Date(s.date);
                return saleDate >= new Date(fromDate) && saleDate <= new Date(toDate + 'T23:59:59');
            });

            const data = filteredSales.map(s => ({
                'Invoice': s.invoiceNo,
                'Date': new Date(s.date).toLocaleString('en-GB'),
                'Cashier': s.cashier || 'Unknown',
                'Customer': s.customer,
                'Items Count': s.items.reduce((sum, i) => sum + i.qty, 0),
                'Subtotal': s.subtotal,
                'Discount Type': s.discountType === 'percent' ? 'Percentage' : 'Amount',
                'Discount Value': s.discountValue,
                'Discount Amount': s.discount,
                'Total': s.total,
                'Payment Method': getPaymentMethodName(s.payment)
            }));

            const summary = [{
                'Invoice': 'SUMMARY',
                'Total': filteredSales.reduce((sum, s) => sum + s.total, 0),
                'Discount Amount': filteredSales.reduce((sum, s) => sum + s.discount, 0)
            }];

            const ws = XLSX.utils.json_to_sheet([...data, {}, ...summary]);
            const wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, 'Sales Report');
            
            XLSX.writeFile(wb, `Sales_Report_${fromDate}_to_${toDate}.xlsx`);
            addAuditLog('EXPORT', `Exported sales report (${fromDate} to ${toDate})`);
        }

        function exportAuditToExcel() {
            const data = auditLog.map(log => ({
                'Timestamp': new Date(log.timestamp).toLocaleString('en-GB'),
                'User': log.user,
                'User ID': log.userId,
                'Action': log.action,
                'Details': log.details
            }));

            const ws = XLSX.utils.json_to_sheet(data);
            const wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, 'Audit Log');
            
            XLSX.writeFile(wb, `Audit_Log_${new Date().toISOString().slice(0,10)}.xlsx`);
            addAuditLog('EXPORT', 'Exported audit log to Excel');
        }

        // Utility Functions
        function updateHeaderStats() {
            const today = new Date().toDateString();
            const todaySales = sales.filter(s => new Date(s.date).toDateString() === today);
            const total = todaySales.reduce((sum, s) => sum + s.total, 0);
            
            document.getElementById('todaySales').textContent = formatMoney(total);
            document.getElementById('todayTransactions').textContent = todaySales.length;
        }

        function formatMoney(amount) {
            return new Intl.NumberFormat('en-US').format(Math.round(amount)) + ' MMK';
        }

        function getPaymentMethodName(method) {
            const names = {
                'cash': 'Cash',
                'kpay': 'KBZ Pay',
                'wave': 'Wave Money',
                'cbpay': 'CB Pay',
                'bank': 'Bank Transfer'
            };
            return names[method] || method;
        }

        // Event Listeners
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('searchInput');
            if (searchInput) {
                searchInput.addEventListener('input', function(e) {
                    const term = e.target.value.toLowerCase();
                    const cards = document.querySelectorAll('.product-card');
                    
                    cards.forEach(card => {
                        const text = card.textContent.toLowerCase();
                        card.style.display = text.includes(term) ? 'block' : 'none';
                    });
                });
            }

            document.addEventListener('keydown', function(e) {
                if (e.key === 'F9') {
                    e.preventDefault();
                    if (document.getElementById('posTab') && document.getElementById('posTab').classList.contains('active')) {
                        checkout();
                    }
                }
            });

            const manualInput = document.getElementById('manualBarcodeInput');
            if (manualInput) {
                manualInput.addEventListener('keypress', function(e) {
                    if (e.key === 'Enter') {
                        manualBarcodeSearch();
                    }
                });
            }
        });
    </script>
</body>
</html>
